<h1>Edit user</h1>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username, required: true %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, placeholder: "myplaceholder@email.com" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <%= form.submit 'Edit user' %>
<% end %>
