<!-- RAILSY WAY -->
<h1>New User</h1>

<%= form_with(model: @user, url: users_path) do |form| %>
  
  <div>
    <%= form.label :username %>
    <%= form.text_field :username, required: true %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, required: true, placeholder: "myplaceholder@email.com" %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>

  <%= form.submit 'Create User' %>
<% end %>
